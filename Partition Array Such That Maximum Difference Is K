class Solution {
    public int partitionArray(int[] nums, int k) {
        Arrays.sort(nums);

        if(nums.length == 0) return 0;

        int sub = 1;
        int curr_min = nums[0];

        for(int i = 1; i < nums.length; i++){
            if(nums[i] - curr_min > k){
                sub++;
                curr_min = nums[i];

            }
        }
        return sub;

    }
}
