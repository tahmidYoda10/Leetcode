class Solution {
public:
    int reverse(int x) {
        string str = to_string(x);
        :: reverse(str.begin(), str.end());

        long long y;
        stringstream ss(str);
        ss >> y;

        if (y < INT_MIN || y > INT_MAX) {
            return 0;
        }

        return (x < 0) ? -y : y;
    }
};
