class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        unordered_map<int, int> mp;
        for(int i = 0; i < nums.size(); i++) {
            int x = nums[i];
            int y = target - x;

            // Check if y is already in the map
            if(mp.count(y)) {
                return {mp[y], i};
            }

            // Store current number and its index
            mp[x] = i;
        }

        return {-1, -1};
    }
};
